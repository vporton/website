header.navbar.navbar-expand-md.navbar-light
  .container-xl
    button.navbar-toggler(data-toggle="collapse", data-target="#navbar-menu")
      span.navbar-toggler-icon

    a.navbar-brand.navbar-brand-autodark.d-none-navbar-horizontal.pr-0.pr-md-3(href="#")
      img.navbar-brand-image(src="./assets/images/logo.png", alt="Community")

    .navbar-nav.flex-row.order-md-last
      //- .nav-item.dropdown.d-none.d-md-flex.mr-3
      //-   a.nav-link.px-0(href="#", data-toggle="dropdown", tabindex="-1")
      //-     i(data-feather="bell")
      //-     span.badge.bg-red
      //-   .dropdown-menu.dropdown-menu-right.dropdown-menu-card.dropdown-menu-arrow
      //-     .card
      //-       .card-body Lorem ipsum bla bla bla

      .loggedin.nav-item.dropdown(style="display: none")
        a.nav-link.d-flex.lh-1.text-reset.p-0(href="#" data-toggle="dropdown")
          span.avatar.user-avatar(style="background-image: url(./static/avatars/000m.jpg)")
          .d-none.d-xl-block.pl-2
            div.user-name
            .mt-1.small.text-muted.user-role

        .dropdown-menu.dropdown-menu-right.dropdown-menu-arrow
          a.dropdown-item(href="#/profile") 
            i.icon.dropdown-item-icon(data-feather="settings")
            | Profile
          .dropdown-divider
          a.logout.dropdown-item(href="#!")
            i.icon.dropdown-item-icon(data-feather="log-out")
            | Logout
          
      .loggedout.nav-item
        a.btn.btn-primary(href="#", data-toggle="modal", data-target="#login-modal")
          i.icon(data-feather="user")
          | Login

    #navbar-menu.collapse.navbar-collapse
      .d-flex.flex-column.flex-md-row.flex-fill.align-items-stretch.align-items-md-center
        ul.navbar-nav
          li.nav-item.link-home
            a.nav-link(href="#")
              span.nav-link-icon.d-md-none.d-lg-inline-block
                i.icon(data-feather="home")
              span.nav-link-title Dashboard

          li.nav-item.link-tokens
            a.nav-link(href="#/tokens")
              span.nav-link-icon.d-md-none.d-lg-inline-block
                i.icon(data-feather="users")
              span.nav-link-title Tokens

          li.nav-item.link-votes
            a.nav-link(href="#/votes")
              span.nav-link-icon.d-md-none.d-lg-inline-block
                i.icon(data-feather="check-circle")
              span.nav-link-title Votes

          li.nav-item.link-vault
            a.nav-link(href="#/vault")
              span.nav-link-icon.d-md-none.d-lg-inline-block
                i.icon(data-feather="lock")
              span.nav-link-title Vault

#login-modal.modal.modal-blur.fade(role="dialog")
  .modal-dialog(role="document"): .modal-content
    .modal-body
      .form-label Wallet key file
      .form-file
        input#wallet.form-file-upload.file-upload-default(type="file" style="display: none")
        label.form-file-label(for="wallet")
          span.form-file-text Choose a wallet...
          span.form-file-button Browse

    .modal-footer
      a.btn.btn-link.link-secondary(data-dismiss="modal" href="#") Cancel